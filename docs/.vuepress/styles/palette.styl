sotm-utrecht = #ffd657
sotm-green = #82ba5c
sotm-orange = #d38a45
sotm-red = #b84b38
sotm-blue = #38A5B8

sotm-gray = #4b5148
sotm-white = #ECFFE3
sotm-black = #343832

body
    color sotm-black
a
    color sotm-orange

.home .hero .action-button
    background-color sotm-utrecht
    border-bottom sotm-orange
    color sotm-black
    &:hover
        background-color: sotm-green
        border-bottom: lightness(orange, 30%)

.navbar .site-name
    color sotm-gray
    font-family: 'Hoefler', 'Adobe Garamond Pro', 'EB Garamond', Garamond, Georgia, 'Times New Roman', Times, serif

a.sidebar-link
    color sotm-black
    &:hover
        color sotm-orange

a.sidebar-link.active
    color: sotm-orange
    border-left-color sotm-orange

.navbar .links
    background-color: #fff

.home .feature h2,
.home .hero .description,
.home .footer
    color sotm-gray

.feature.feature
    color sotm-gray
    text-align: center

.home .feature
    h2,
    p
        color sotm-gray

